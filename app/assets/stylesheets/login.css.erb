.session-form-container {
  min-height: 100%;
  max-width: 1240px;
  margin: auto;
  background: white;
  font-family: "Interstate","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Garuda,Verdana,Tahoma,sans-serif;
  font-size: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.session-form {
  width: 400px;
  height: 750px;
  margin: 30px auto;
  padding: 0 30px;
  border: 1px solid #e5e5e5;
}

.session-form-logo {
  position: relative;
  margin-top: 20px;
  height: 200px;
  width: 100%;
  background: url('<%= asset_path("logo.png") %>') no-repeat;
  background-size: 100%;
}

.login-form {
  margin: auto;
  /* margin-top: 200px; */
  width: 380px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-form input {
  width: 362px;
  margin: auto;
  font-size: 18px;
  line-height: 24px;
  padding: 7px 8px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-bottom: 16px;
}

.login-submit {
  width: 100%;
  background-color: #f50;
  color: #fff;
  font-size: 16px;
  line-height: 18px;
  height: 40px;
  border-radius: 3px;
  display: flex;
  justify-content: center;
  margin-bottom: 16px;
}

.demo-button {
  margin: auto;
  width: 378px;
  background-color: #fff;
  color: #f50;
  border: 1px solid #f50;
  font-size: 16px;
  line-height: 18px;
  height: 40px;
  border-radius: 3px;
  display: flex;
  justify-content: center;
  margin-bottom: 16px;
}

.signin-switch-container {
  margin: auto;
  text-align: right;
}

.signin-switch {
  font: 100 14px/1.5 "Interstate", "Lucida Grande", Arial, sans-serif;
  color: #fff;
  background-color: #f50;
  padding: 2px 11px 2px 10px;
  border-radius: 3px;
  margin: 10px;
}
