.song-show-top {
  height: 380px;
  width: 100%;
  background-image: linear-gradient(135deg,#846170,#70929c);
  background-size: cover;
  display: flex;
  justify-content: space-between;
}

.song-show-top-play, .song-show-top-pause {
  width: 60px;
  height: 60px;
}

.song-show-top-left-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.show-top-left {
  display: flex;
}

.show-play-button-container {
  margin-top: 20px;
  margin-left: 20px;
}

.song-show-top-play {
  background: url('<%= asset_path('show_play.png') %>');
  background-size: cover;
}

.song-show-top-pause {
  background: url('<%= asset_path('show_pause.png') %>');
  background-size: cover;
}

.waveform-container {
  background: url('<%= asset_path('waveform.png') %>');
  background-size: cover;
  height: 50%;
  width: 80%;
  margin-bottom: 20px;
  margin-left: 20px;
}

.song-show-cover-container {
  width: 340px;
  height: 340px;
  margin-top: 20px;
  margin-right: 20px;
}

.song-show-info {
  margin-top: 20px;
  margin-left: 20px;
  display: flex;
  flex-direction: column;
}

.song-show-owner-username {
  background-color: rgba(0,0,0,.8);
  color: #ccc;
  font-weight: 100;
  cursor: pointer;
  font-size: 16px;
  line-height: 1.2;
  padding: 2px 7px 3px;
  font-family: "Interstate","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Garuda,Verdana,Tahoma,sans-serif;
  display: inline-block;
}

.song-show-owner-username:hover {
  color: #f2f2f2;
}

.song-show-title {
  color: #fff;
  font-size: 24px;
  line-height: 37px;
  background-color: rgba(0,0,0,.8);
  display: inline-block;
  padding: 4px 7px;
  font-family: "Interstate", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Garuda, Verdana, Tahoma, sans-serif;
  margin-top: 2px;
}

.song-show-bot {
  margin-top: 20px;
  width: 100%;
  overflow: hidden;
}

.song-show-buttons {
  margin-left: 20px;
  width: 100%;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 10px;
}

.song-show-buttons button {
  padding: 2px 11px 2px 10px;
  border: 1px solid #e5e5e5;
  border-radius: 3px;
  font-size: 14px;
  font-family: "Interstate","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Garuda,Verdana,Tahoma,sans-serif;
  margin-right: 5px;
}

.song-show-description {
  font-size: 14px;
  font-family: "Interstate","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Garuda,Verdana,Tahoma,sans-serif;
  font-weight: 100;
  margin-left: 20px;
  padding-top: 20px;
}

